//perimeter of a rectangle=2(l+b)
import java.util.*;
class perimeterrectangle {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int l = sc.nextInt();
        int b = sc.nextInt();
        int perimeter = 2*(l+b);
        System.out.println(perimeter);
    }
}
